<%- include('partials/_header') -%>

    <body>

        <!-- Navigation -->
        <%- include('partials/_navigation') -%>

            <!-- Page Header -->
            <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-md-10 mx-auto">
                            <div class="page-heading">
                                <h1>Edit Your Post</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <form method="post" action="/posts/<%= post._id %>?_method=PUT" aria-required="true">
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls">
                                    <label>Post Title</label>
                                    <input type="text" class="form-control" placeholder="<%= post.title %>" id="name" required
                                        name="title" data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group floating-label-form-group controls">
                                    <label>Name</label>
                                    <input type="text" class="form-control" placeholder="<%= post.name %>" id="name" required
                                        name="name" data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>

                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls">
                                    <label>Post Detail</label>
                                    <textarea rows="5" class="form-control" placeholder="<%= post.detail %>" id="message" required
                                        name="detail"
                                        data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <br>
                            <div id="success"></div>
                            <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
                        </form>
                    </div>
                </div>
            </div>

            <hr>

            <!-- Footer -->
            <!-- Bootstrap core JavaScript -->
            <!-- Custom scripts for this template -->
            <%- include('partials/_footer') -%>

                <!-- Contact Form JavaScript -->
                <script src="js/jqBootstrapValidation.js"></script>
                <script src="js/contact_me.js"></script>
    </body>

    </html>